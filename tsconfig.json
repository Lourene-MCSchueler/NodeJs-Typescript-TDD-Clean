{
  "compilerOptions": {
    "outDir": "dist", //pasta saida js
    "module": "CommonJS", //gera saida com require
    "target": "es2019", //padrao js (node.green)
    "esModuleInterop": true, //converte para commonjs
    "allowJs": true, //permite arquivo config em js
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  }, 
  "include": ["src"],
  "exclude": []
}